<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.tobi.springboot_basic_board.mapper.MemberMapper">
    <resultMap id="memberResultMap" type="com.example.tobi.springboot_basic_board.model.Member">
        <result property="userid" column="userid"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="signUp" parameterType="com.example.tobi.springboot_basic_board.model.Member">
        INSERT INTO member (userid, password, name)
        VALUES (#{userid}, #{password}, #{name});
    </insert>

    <select id="signIn"
            parameterType="String"
            resultMap="memberResultMap">
        SELECT * FROM member WHERE user_id = #{userId};
    </select>
</mapper>